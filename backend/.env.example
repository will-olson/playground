# Database Configuration
DATABASE_URL="file:./dev.db"
DIRECT_URL="file:./dev.db"

# JWT Configuration - Generate secure random keys for production
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-minimum-32-characters"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

# Sigma Integration
SIGMA_API_URL="https://app.sigma.com/api"
SIGMA_API_KEY="your-sigma-api-key"

# Sigma OAuth Configuration
SIGMA_CLIENT_ID="your-sigma-client-id"
SIGMA_CLIENT_SECRET="your-sigma-client-secret"
SIGMA_ORG_SLUG="your-org-slug"
SIGMA_BASE_URL="https://api.sigmacomputing.com"

# Sigma Test Credentials (for development only)
SIGMA_TEST_EMAIL_1="test1@example.com"
SIGMA_TEST_EMAIL_2="test2@example.com"
SIGMA_TEST_EMAIL_3="test3@example.com"
SIGMA_TEST_PASSWORD="your-test-password"

# Admin Configuration
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-admin-password"

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
SIGMA_AUTH_URL="https://api.sigmacomputing.com/v2/auth/token"
